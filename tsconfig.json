{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",
  "_version": "22.0.0",

  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
